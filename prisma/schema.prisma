generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- PESSOAS E ACESSO ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // ROLE: Define permissões macro
  role Role @default(STUDENT)

  // RELAÇÃO: Aluno pertence a uma turma (Pode ser null no cadastro inicial)
  cohortId String?
  cohort   Cohort? @relation(fields: [cohortId], references: [id])

  checkIns CheckIn[]

  // Tabelas do NextAuth (Auth.js)
  accounts Account[]
  sessions Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- ESTRUTURA DE CURRÍCULO (CONTEÚDO) ---

model Stack {
  id          String  @id @default(cuid())
  title       String // Ex: "Fullstack Master"
  description String? @db.Text
  slug        String  @unique // Para URL amigável (ex: /stacks/fullstack-master)

  // FUTURE-PROOF: Permite esconder stacks em rascunho ou listar no marketplace
  published Boolean  @default(false)
  price     Decimal? // Preparado para venda futura (pode ser null/grátis)

  sprints Sprint[]
  cohorts Cohort[] // Uma stack pode ser usada por várias turmas

  createdAt DateTime @default(now())
}

model Sprint {
  id          String  @id @default(cuid())
  title       String // Ex: "Módulo 01: Fundamentos"
  description String?
  order       Int // 1, 2, 3... Define a sequência

  stackId String
  stack   Stack  @relation(fields: [stackId], references: [id], onDelete: Cascade)

  resources Resource[]
  checkIns  CheckIn[]
}

// O CONTEÚDO DA SPRINT (Aulas, Leituras, Tarefas)
model Resource {
  id          String       @id @default(cuid())
  title       String // Ex: "Ler Documentação do Next.js"
  type        ResourceType @default(LINK) // VIDEO, READING, CHALLENGE
  url         String
  description String? // Instruções específicas (ex: "Ler pag 10-20")

  sprintId String
  sprint   Sprint @relation(fields: [sprintId], references: [id], onDelete: Cascade)
}

// --- TURMAS E EXECUÇÃO ---

model Cohort {
  id          String  @id @default(cuid())
  name        String // Ex: "Turma Senai 2025.1"
  description String?

  // FUTURE-PROOF: Turma Pública (entram sozinhos) vs Privada (Convite)
  type CohortType @default(PRIVATE)

  // Para turmas privadas (PRIVATE)
  inviteCode String? @unique

  startsAt DateTime
  endsAt   DateTime?

  stackId String
  stack   Stack  @relation(fields: [stackId], references: [id])

  users User[]

  createdAt DateTime @default(now())
}

// --- VALIDAÇÃO (O CORE DO SISTEMA) ---

model CheckIn {
  id      String  @id @default(cuid())
  content String  @db.Text // O resumo do aprendizado
  link    String? // Link do GitHub/Vercel (Opcional)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  sprintId String
  sprint   Sprint @relation(fields: [sprintId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  // REGRA DE OURO: Um aluno só faz UM check-in por Sprint
  @@unique([userId, sprintId])
}

// --- ENUMS E NEXTAUTH ---

enum Role {
  STUDENT
  MASTER
  ADMIN
}

enum CohortType {
  PUBLIC // Aparece na lista pública, qualquer um entra
  PRIVATE // Só entra com inviteCode
}

enum ResourceType {
  LINK
  VIDEO
  READING
  CHALLENGE
  Quiz // Preparado para o futuro
}

// --- NEXTAUTH MODELS ---

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
